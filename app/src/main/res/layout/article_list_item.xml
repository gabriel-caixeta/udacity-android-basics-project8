<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/horizontal_margin"
    android:paddingVertical="@dimen/list_item_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/article_section"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/ArticleSection"/>

        <TextView
            android:id="@+id/article_date_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/ArticleOther"
            android:layout_gravity="end"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/article_title_text"
        style="@style/ArticleTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/article_author_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/ArticleOther"
            android:layout_gravity="end" />





</LinearLayout>